@model TraversalCoreProje.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="content-wrapper-before"></div>
<div class="content-header row">
    <div class="content-header-left col-md-4 col-12 mb-2">
        <h3 class="content-header-title">Profil Düzenleme Sayfası  </h3>
    </div>
    <div class="content-header-right col-md-8 col-12">
        <div class="breadcrumbs-top float-md-right">
            <div class="breadcrumb-wrapper mr-1">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html">Ana Sayfa</a>
                    </li>
                    <li class="breadcrumb-item active">
                        Profil Düzenleme Sayfası
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Profil Düzenleme Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Profiliniz ile ilgili bilgileri bu sayfadan güncelleyebilirsiniz.</p>
                    <div class="container-fluid py-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="card mb-4">
                                    <div class="card-header pb-0">
                                        <h4>Profil Bilgileriniz</h4>
                                    </div>
                                    <div class="card-body px-0 pt-0 pb-2 m-4">
                                        <form class="forms-sample" method="post">
                                            <div class="form-group">
                                                <label for="exampleInputName1">Yazar Ad Soyad</label>
                                                <input type="text" asp-for="@Model.Name" class="form-control" placeholder="@Model.Name">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputName1">Kullanıcı Adı</label>
                                                <input type="text" asp-for="@Model.Surname" class="form-control" placeholder="@Model.Surname">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail3">Mail Adresi</label>
                                                <input type="text" asp-for="@Model.Mail" class="form-control" placeholder="@Model.Mail">
                                            </div>
                                            <div class="form-group">
                                                <label for="exampleInputEmail3">Görsel Yolu</label>
                                                <input type="text" asp-for="@Model.PhoneNumber" class="form-control" placeholder="@Model.Image">
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleInputPassword4">Yeni Şifre</label>
                                                <input type="text" asp-for="@Model.Password" class="form-control" placeholder="@Model.Password">
                                            </div>

                                            <div class="form-check">
                                                <input type="checkbox" id="flexCheckChecked" asp-for="@Model.ConfirmPassword" placeholder="@Model.ConfirmPassword">
                                                <label for="flexCheckChecked">
                                                    Şifremi Değiştirmek İstemiyorum
                                                </label>
                                            </div>
                                            <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                                            <button class="btn btn-light" asp-action="Index" asp-controller="Dashboard">İptal</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

