@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Duyuru Listesi  </h5>
    <div class="table-responsive text-nowrap">
        <table  class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>BAŞLIK</th>
                    <th>İÇERİK</th>
                    <th>Detaylar</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    string truncatedContent = "";

                    <tr>
                        <td>@item.AnnouncementID</td>
                        <td><strong>@item.Title</strong></td>
                        @{
                            if (item.Content != null)
                            {
                                if (item.Content.Length < 30)
                                {
                                    <td>@item.Content</td>
                                }
                                else
                                {
                                    truncatedContent = item.Content.Substring(0, 30) + "...";
                                    <td>@truncatedContent</td>
                                }
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                        <td>
                            <a class="btn btn-warning" href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID"><i class="bx bx-trash me-1"></i> Sil</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
    <a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-primary">Yeni Duyuru Oluştur!</a>
</div>

