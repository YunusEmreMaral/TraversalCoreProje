@using EntityLayer.Concrete
@model List<ContactUs>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Bize Ulaşın Mesajları  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>GÖNDEREN</th>
                    <th>KONU</th>
                    <th>TARİH</th>
                    <th>SİL</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td> <strong>@item.Name</strong></td>
                        <td>@item.Subject</td>
                        <td>@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>


                        <td>   <a class="btn btn-primary" href="/Admin/ContactUs/ContactUsDetails/@item.ContactUsID"><i class="bx bx-detail me-1"></i> Detaylar</a></td>

                        <td>
                            <a class="btn btn-danger" href="/Admin/ContactUs/Delete/@item.ContactUsID"><i class="bx bx-trash me-1"></i> Sil</a>

                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


