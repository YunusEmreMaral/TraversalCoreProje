@model EntityLayer.Concrete.AppUser

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card mb-4">
    <h5 class="card-header">Kullanıcı Güncelleme Sayfası

    </h5>
    <form method="post">
        @Html.HiddenFor(x => x.Id)
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">İsim :</label>
                <input class="form-control"
                       type="text"
                       asp-for="Name"
                       placeholder="Ad?" />
            </div>
            <div class="mb-3">
                <label class="form-label">Soyad :</label>
                <input class="form-control"
                       type="text"
                       asp-for="Surname"
                       placeholder="Soyad ?" />
            </div>
            <div class="mb-3">
                <label class="form-label">Görsel Yolu:</label>
                <input class="form-control"
                       type="text"
                       asp-for="ImageUrl"
                       placeholder="Görsel Yolu giriniz" />
            </div>  
            <div class="mb-3">
                <label class="form-label">Cinsiyet:</label>
                <input class="form-control"
                       type="text"
                       asp-for="Gender"
                       placeholder="Cinsiyet Seçin." />
            </div>
          
            <button class="btn btn-outline-info col-12">Rehberi Güncelle!</button>
        </div>
    </form>
</div>
