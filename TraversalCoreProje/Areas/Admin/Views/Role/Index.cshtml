@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Rol Listesi  </h5>

    @if (Model.Count > 0)
    {
        <div class="table-responsive text-nowrap">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>

                <tbody class="table-border-bottom-0 text-center">

                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td> <strong>@item.Name</strong></td>                         
                            <td> <a class="btn btn-warning" href="/Admin/Role/UpdateRole/@item.Id"><i class="bx bx-edit-alt me-1"></i> Güncelle</a></td>
                            <td> <a class="btn btn-danger" href="/Admin/Role/DeleteRole/@item.Id"><i class="bx bx-trash me-1"></i> Sil</a>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    else
    {
        <strong class="pb-2 text-center alert alert-danger">Her hangi bir rol ataması yapılmamıştır.</strong>
    }

    <a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Oluştur!</a>
</div>


