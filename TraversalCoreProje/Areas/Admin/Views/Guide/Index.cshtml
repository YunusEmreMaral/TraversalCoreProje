@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<

<div class="card">
    <h5 class="card-header">Rehber Listesi  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>GÖRSEL</th>
                    <th>İSİM SOYİSİM</th>
                    <th>AÇIKLAMA</th>
                    <th>DURUM</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GuideID</td>
                        <td><img src="@item.Image" alt="Avatar" class="rounded-circle avatar avatar-s pull-up  " /></td>
                        <td> <strong>@item.Name</strong></td>
                        <td>
                            @if (item.Description.Length <= 30)
                            {
                                @item.Description
                            }
                            else
                            {
                                @Html.Raw(item.Description.Substring(0, 30) + "...")
                            }
                        </td>

                        @if (item.Status == true)
                        {
                            <td>
                                <a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-danger">Pasif Yap!</a>
                            </td>
                        }
                        else
                        {
                            <td>
                                <a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Aktif Yap!</a>
                            </td>
                        }
                        <td>
                            <a class="btn btn-warning" href="/Admin/Guide/EditGuide/@item.GuideID"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/Admin/Guide/DeleteGuide/@item.GuideID"><i class="bx bx-trash me-1"></i> Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Oluştur!</a>
</div>





