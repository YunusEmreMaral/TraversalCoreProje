@model List<GetAllGuideQueryResult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Rehber Sayfası (CQRS MediatR)  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>GÖRSEL</th>
                    <th>İSİM SOYİSİM</th>
                    <th>AÇIKLAMA</th>
                    <th>gÜNCELLE</th>
                    <th>sİL</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GuideID</td>
                        <td><img src="@item.Image" alt="Avatar" class="rounded-circle avatar avatar-s pull-up" /></td>
                        <td> <strong>@item.Name</strong></td>
                        <td>@item.Description</td>
                    
                        <td>
                            <a class="btn btn-warning" href="/Admin/DestinationMediatR/GetGuides/@item.GuideID"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="/Admin/DestinationMediatR/DeleteGuide/@item.GuideID"><i class="bx bx-trash me-1"></i> Sil</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Admin/DestinationMediatR/AddGuide" class="btn btn-outline-primary">Yeni Rehber Oluştur!</a>
</div>

