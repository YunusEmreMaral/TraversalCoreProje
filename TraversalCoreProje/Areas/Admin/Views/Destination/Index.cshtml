@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="card">
    <h5 class="card-header">Tur Rotaları  </h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>ŞEHİR</th>
                    <th>FİYAT</th>
                    <th>KAPASİTE</th>
                    <th>GOR</th>
                    <th>gÜNCELLE</th>
                    <th>SİL</th>
                </tr>
            </thead>

            <tbody class="table-border-bottom-0 text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DestinationID</td>
                        <td> <strong>@item.City</strong></td>
                        <td>@item.Price ₺</td>
                        <td>@item.Capacity</td>

                        <td>


                            <a class="btn btn-info" href="/Destination/DestinationDetails/@item.DestinationID"><i class="bx bx-street-view me-1"></i> Sitede Gör</a>
                        </td>

                        <td>
                            <a class="btn btn-warning" href="/Admin/Destination/UpdateDestination/@item.DestinationID"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                       
                      
                        <td>
                            <a class="btn btn-danger" href="/Admin/Destination/DeleteDestination/@item.DestinationID"><i class="bx bx-trash me-1"></i> Sil</a>
                        </td>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası Oluştur!</a>
</div>
