@model DTOLayer.DTOs.ContactDTOs.SendMessageDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
﻿<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>İletişim Bilgilerimiz</h5>
                            <p class="mt-3 mb-4">
                                Merhaba bize ulaşmak istersen yandaki kutuyu doldur ve gönder . 7 gün içinde mesajına dönülecektir.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">E-Posta :</h6>
                            <p>
                                <a href="mailto:maralyunus41@mail.com">
                                    maralyunus41@mail.com
                                </a>
                            </p>
                            <h6 class="mt-4">Bizi Ziyaret Edin :</h6>
                            <p> Pişmaniye Sokak  Pişmaniye Mahallesi No: Pişmaniye / Kocaeli</p>
                            <h6 class="mt-4">Telefon :</h6>
                            <p class="margin-top"><a href="tel:+90 1234567891">+90 1234567891</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form id="aaaaa" method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" placeholder="İsim Soyisim :" asp-for="Name" class="contact-input" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" placeholder="E-Posta Adresiniz :" asp-for="Mail" class="contact-input" />
                                <span asp-validation-for="Mail" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Subject" placeholder="Konu" class="contact-input" />
                                <span asp-validation-for="Subject" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="MessageBody" placeholder="Mesajınızı giriniz..."></textarea>
                            <span asp-validation-for="MessageBody" class="text-danger"></span>

                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#aaaaa').submit(function (event) {
            event.preventDefault(); // Formun normal submit işlemini engelle

            var formData = $(this).serialize(); // Form verilerini al

            $.ajax({
                type: 'POST',
                url: '/ContactUs/Index',
                data: formData,
                success: function (response) {
                    // Başarılı gönderim durumunda SweetAlert'ı tetikle
                    Swal.fire({
                        icon: 'success',
                        title: 'Başarılı!',
                        text: 'Mesajınız başarıyla gönderildi.',
                        confirmButtonColor: '#3085d6',
                        confirmButtonText: 'Tamam'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            location.reload(); 
                        }
                    });
                },
                
            });
        });
    });
</script>
